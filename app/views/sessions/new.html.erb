<center>
<h1>Log In</h1>

<%if @error%>
  <p>This user does not exist.</p>
<%end%>

<%=form_tag "/login" do%>
<h3><%=label_tag "Username" %></h3>
<%=text_field_tag :username%>
<br><br>
<h3><%=label_tag "Password" %></h3>
<%=password_field_tag :password%>
<br><br>
<%=submit_tag :submit, class: "button"%>
<%end%>
<br>
<%= link_to "Create a new user", new_owner_path %>
</center>